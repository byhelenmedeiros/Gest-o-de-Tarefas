generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
    binaryTargets = ["native", "windows"]

}

datasource db {
  provider = "postgresql"
  url      = env("postgres://default:************@ep-wispy-glade-71837903.eu-central-1.postgres.vercel-storage.com:5432/verceldb")
}
model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  dueDate     DateTime
  completed   Boolean  @default(false)
  category    String 
  favorite    Boolean  @default(false) 
  sharedWith Int[]      @default([]) 
  priority   String
}
model Users{
    id Int @id @default(autoincrement())
    name String  @db.VarChar(255)
    email String @unique
    password String
    isAdmin   Boolean @default(false)
}